{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-soap": "*",
        "ext-xmlreader": "*",
        "ext-zip": "*",
        "api-platform/api-pack": "^1.1",
        "box/spout": "^2.7",
        "cloudinary/cloudinary_php": "^1.12",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "eightpoints/guzzle-bundle": "^7.4",
        "enqueue/enqueue-bundle": "^0.8.42",
        "enqueue/redis": "^0.8.42",
        "friendsofsymfony/elastica-bundle": "^5.0",
        "guzzlehttp/guzzle": "^6.3",
        "karriere/json-decoder": "^2.1",
        "league/flysystem-ziparchive": "^1.0",
        "oneup/flysystem-bundle": "^3.0",
        "ruflin/elastica": "^6.0",
        "symfony/apache-pack": "^1.0",
        "symfony/browser-kit": "4.1.*",
        "symfony/cache": "4.1.*",
        "symfony/console": "^4.0",
        "symfony/dotenv": "4.1.*",
        "symfony/event-dispatcher": "4.1.*",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lock": "4.1.*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/process": "4.1.*",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "behat/mink": "1.7.x-dev",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.3",
        "behat/symfony2-extension": "^2.1",
        "behatch/contexts": "^3.2",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.13",
        "fzaninotto/faker": "^1.8",
        "phpunit/phpunit": "^7",
        "symfony/maker-bundle": "^1.9"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install",
            "bin/console --env=prod cache:warmup"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check": [
            "@php-cs-check"
        ],
        "php-cs-check": [
            "php vendor/bin/php-cs-fixer fix --dry-run --diff src/"
        ],
        "php-cs-fix": [
            "php vendor/bin/php-cs-fixer fix src/"
        ],
        "phpunit": [
            "vendor/bin/phpunit"
        ],
        "deploy": [
            "bin/console --env=prod doctrine:migrations:migrate",
            "bin/console --env=prod cache:clear --no-debug",
            "bin/console --env=prod cache:warmup"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
